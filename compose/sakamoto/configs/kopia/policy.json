{
  "@sakamoto": {
    "retention": {
      "keepHourly": 24,
      "keepDaily": 7
    },
    "compression": {
      "compressorName": "zstd-fastest"
    },
    "files": {
      "ignore": [
        ".DS_Store",
        ".DS_Store?",
        "._*",
        ".Spotlight-V100",
        ".Trashes",
        ".fseventsd",
        ".TemporaryItems",
        "Thumbs.db",
        "*.log",
        "*.tmp",
        "*.temp",
        "cache",
        "/mirror",
        "/minio",
        "/kopia",
        "/kopia-local"
      ]
    }
  },
  "@vps": {
    "retention": {
      "keepHourly": 24,
      "keepDaily": 7
    },
    "compression": {
      "compressorName": "zstd-fastest"
    },
    "files": {
      "ignore": [
        ".DS_Store",
        "*.log",
        "*.tmp",
        "*.temp",
        "cache",
        "/kopia",
        "/dhp"
      ]
    }
  },
  "shelken@sakamoto:/backup/compose": {
    "scheduling": {
      "cron": ["30 * * * *"]
    }
  },
  "shelken@sakamoto:/backup/minio": {
    "scheduling": {
      "cron": ["30 */6 * * *"]
    }
  },
  "shelken@vps:/backup/data": {
    "scheduling": {
      "cron": ["47 */4 * * *"]
    }
  }
}
