{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    "github>shelken/home-ops//.renovate/grafanaDashboards.json5",
    "github>shelken/home-ops//.renovate/labels.json5",
    "github>shelken/home-ops//.renovate/semanticCommits.json5",
    "github>shelken/home-ops//.renovate/groups.json5",
    "github>shelken/home-ops//.renovate/automerge.json5",
    "github>shelken/home-ops//.renovate/packageRules.json5",
    "github>shelken/home-ops//.renovate/customManagers.json5",
    ":automergeBranch",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":semanticCommits",
    ":timezone(Asia/Shanghai)",
  ],
  dependencyDashboard: true,
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  schedule: ["every weekend"],
  ignorePaths: ["**/*.sops.*"],
  flux: {
    managerFilePatterns: ["/(^|/)k8s/.+\\.ya?ml(?:\\.j2)?$/"],
  },
  "helm-values": {
    managerFilePatterns: ["/(^|/)k8s/.+\\.ya?ml(?:\\.j2)?$/"],
  },
  helmfile: {
    managerFilePatterns: ["/(^|/)bootstrap/(helmfile|crds).*\\.ya?ml(?:\\.j2)?$/"],
  },
  kubernetes: {
    managerFilePatterns: ["/(^|/)k8s/.+\\.ya?ml(?:\\.j2)?$/"],
  },
  kustomize: {
    managerFilePatterns: ["/^kustomization\\.ya?ml(?:\\.j2)?$/"],
  },
}
